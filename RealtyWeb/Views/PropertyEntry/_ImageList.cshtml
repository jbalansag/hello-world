@model List<RealtyWeb.Models.ImageGallery>
@{
    AjaxOptions options = new AjaxOptions
    {
        Confirm = "Are you sure you want to remove this image?",
        HttpMethod = "POST",
        OnSuccess = "UpdateImageList(data)",
        LoadingElementId = "divLoading",
        InsertionMode = InsertionMode.ReplaceWith
    };
}

@for (var i = 0; i < Model.Count(); i++)
{
    <div style="position:relative; float:left; padding: 0px; padding: 3px; width: 120px;">
        @Ajax.ActionLink("X", "DeleteImage", new { imageId = Model[i].Id, tranId = Model[i].TranId }, options, new { @class="removeButton btn btn-info btn-xs", @style="padding-left: 6px; position:absolute;  border: solid 0px; right: 3px; bottom: 77px; z-index: 14; height: 20px; color: #fff; width: 21px; font-size: 12px; background-color: Red; border-radius: 0px; background-image: none;" })
        <img src="@Url.Action("GetImage", "Image", new { imageName = Model[i].ImagePath })" class="thumb-image" style="width: 100%; height: 94px; position: relative; padding: 0px; margin: 0px;"/>
        @Html.HiddenFor(model =>  model[i].Id)
    </div>
}